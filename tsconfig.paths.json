{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/@core/components/*"],
      "@layouts/*": ["src/@core/layouts/*"],
      "@store/*": ["src/redux/*"],
      "@styles/*": ["src/@core/scss/*"],
      "@configs/*": ["src/configs/*"],
      "@hooks/*": ["./src/utility/hooks/*"],
      "@utils": ["./src/utility/Utils"],
      "@pages/*": ["./src/pages/*"],
      "@pokedex/*": ["./src/pokedex/components/*"],
      "@api/*": ["./src/pokedex/api/*"],
      "@css/*": ["./src/assets/css/*"]
    }
  }
}

